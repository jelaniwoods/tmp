<%= form_with(model: @todo, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <%= f.hidden_field :user_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :due_on %>
    <%= f.text_field :due_on, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :completed_on %>
    <%= f.text_field :completed_on, class: "form-control" %>
  </div>

  <%= f.submit "Create todo", class: "btn btn-block btn-outline-secondary" %>
<% end %>
